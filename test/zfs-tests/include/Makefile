include $(SRC)/test/Makefile.com

include $(SRC)/Makefile.master

SRCS = commands.cfg \
	default.cfg \
	libtest.shlib \
	math.shlib \
	properties.shlib

ROOTOPTPKG = $(ROOT)/opt/zfs-tests
INCLUDEDIR = $(ROOTOPTPKG)/include

CMDS = $(SRCS:%=$(INCLUDEDIR)/%)
$(CMDS) := FILEMODE = 0555

all: $(SRCS)

install: $(CMDS)

clean lint clobber:

$(CMDS): $(INCLUDEDIR) $(SRCS)

$(INCLUDEDIR):
	$(INS.dir)

$(INCLUDEDIR)/%: %
	$(INS.file)
