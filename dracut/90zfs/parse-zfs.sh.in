#!/bin/sh

case "$root" in
	ZFS|ZFS:|ZFS:AUTO|ZFS:auto)
		root="ZFS:auto"
		zfsroot="true"
		rootok=1
		seek_bootfs=1
		;;

	ZFS:*|ZFS=*)
		root="${root:4}"
		zfsroot="true"
		rootok=1
		seek_bootfs=0
		;;
esac

if [ "$zfsroot" = "true" ] ; then
	info "ZFS: root = $root"
	info "ZFS: seek_bootfs = $seek_bootfs"
fi
