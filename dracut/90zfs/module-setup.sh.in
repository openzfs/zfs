#!/bin/sh

check() {
	require_binaries zpool zfs mount.zfs
	return 0
}

depends() {
	return 0
}

cmdline() {
	return 0
}

installkernel() {
	instmods zfs spl
}

install() {
	inst_hook cmdline 90 "$moddir/parse-zfs.sh"
	inst_hook mount 99 "$moddir/mount-zfs.sh"
	inst @sbindir@/zpool
	inst @sbindir@/zfs
	inst @sbindir@/mount.zfs
	inst_multiple -o @sbindir@/zdb @sysconfdir@/zfs/zpool.cache @sysconfdir@/hostid /usr/bin/hostid
}
