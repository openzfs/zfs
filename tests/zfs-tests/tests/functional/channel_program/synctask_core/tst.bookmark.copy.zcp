-- This program should be invoked as "zfs program <pool> <prog> <fs> <source_book> <new_book>"

args = ...
argv = args["argv"]
fs = argv[1]
source = fs .. "#" .. argv[2]
new = fs .. "#" .. argv[3]
assert(zfs.sync.bookmark(source, new) == 0)
books = {}
count = 0
for s in zfs.list.bookmarks(fs) do
	count = count + 1
	books[s] = 1
end
assert(count == 2)
assert(books[source] == 1)
assert(books[new] == 1)
