args = ...
argv = args["argv"]
fs = argv[1]
snap = argv[2]

function snapshot_recursive(root)
    assert(zfs.sync.snapshot(root .. "@" .. snap) == 0)
    for child in zfs.list.children(root) do
        snapshot_recursive(child)
    end
end

snapshot_recursive(fs)
